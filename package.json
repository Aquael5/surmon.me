  "scripts": {
    "spa:dev": "vite",
    "spa:build": "vite build --outDir dist",
    "spa:start": "http-server ./dist",
    "ssr:dev": "NODE_ENV=development tsnd -r tsconfig-paths/register src/bff",
    "ssr:build:client": "vite build --outDir dist/client",
    "ssr:build:server": "vite build --outDir dist/server --ssr src/ssr",
    "ssr:build:bff": "vite build --config vite.bff.config",
    "ssr:build": "npm run ssr:build:client && npm run ssr:build:server && npm run ssr:build:bff",
    "ssr:start": "node ./dist/bff.js",
    "dev": "npm run ssr:dev",
    "lint": "eslint --ext .ts,.tsx,.js,.vue src",
    "format": "npm run lint --fix",
    "release": ". ./scripts/release.sh"
  },
